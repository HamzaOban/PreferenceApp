<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PreferenceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#7895B2</item>
        <item name="colorPrimaryVariant">#AEBDCA</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#E8DFCA</item>
        <item name="colorSecondaryVariant">#F5EFE6</item>
        <item name="colorOnSecondary">#FEFEFE</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#7895B2</item>
        <item name="android:fontFamily">@font/cercoregular</item>
        <item name="android:fontStyle">normal</item>
        <item name="android:textSize">15sp</item>


        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PreferenceApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PreferenceApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PreferenceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#FFCE90</item>
    </style>
    <style name="customRatingBar"
        parent="android:style/Widget.Material.RatingBar.Small">
        ... // Additional customizations
    </style>
</resources>