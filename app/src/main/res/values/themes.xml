<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PreferenceApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#CD7100</item>
        <item name="colorPrimaryVariant">#FF8F00</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#CC7100</item>
        <item name="colorSecondaryVariant">#FE8E00</item>
        <item name="colorOnSecondary">#FEFEFE</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">#CC7100</item>
        <item name="android:fontFamily">@font/defaul</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.PreferenceApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.PreferenceApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.PreferenceApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProgressBarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">#FFCE90</item>
    </style>
</resources>