<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/user_name_tv"
            android:layout_marginBottom="5dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Hamza Oban"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <RatingBar
            style="?android:attr/ratingBarStyleSmall"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:id="@+id/detail_rating_bar"
            android:layout_width="wrap_content"
            android:numStars="5"
            android:layout_height="wrap_content">

        </RatingBar>
    </LinearLayout>


    <TextView
        android:id="@+id/nokta"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:text="Â·"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/detail_comment_tv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/user_name_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/detail_comment_tv"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="start"
        android:text="val verticalDividers"
        android:textColor="@color/softblack"
        android:textSize="15sp"
        android:textStyle="normal"
        app:autoSizeMaxTextSize="20sp"
        app:autoSizeMinTextSize="8sp"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:src="@drawable/ic_baseline_thumb_up_24"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:layout_height="25dp">

    </ImageView>
    <ImageView
        android:src="@drawable/ic_baseline_thumb_down_24"
        android:layout_width="25dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_gravity="center"
        android:layout_height="25dp">

    </ImageView>



</LinearLayout>